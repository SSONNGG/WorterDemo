<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_marginHorizontal="25dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_pic"
            android:src="@drawable/pic"
            android:layout_width="70dp"
            android:layout_height="70dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginStart="20dp">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_nickname"
                    android:text="SongX_"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tv_usersign"
                    android:text="落日沉溺于橘色的海。"
                    android:textColor="@color/black_second"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"/>
            </LinearLayout>

            <top.androidman.SuperButton
                android:id="@+id/btn_updateuser"
                app:text="@string/updateuser"
                app:textSize="13sp"
                app:textColor="@color/white"
                app:color_normal="@color/content_background_blue"
                app:corner="30dp"
                android:layout_gravity="center_vertical|right"
                android:layout_width="90dp"
                android:layout_height="35dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp">

        <LinearLayout
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="25dp"
            android:paddingHorizontal="15dp"
            android:paddingVertical="15dp"
            android:backgroundTint="@color/color_grey_light"
            android:background="@drawable/round_rectangle_shape"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:lineSpacingExtra="10sp"
                android:text="@string/daily_record"
                android:textColor="@color/color_skyblue"
                android:textSize="20sp" />

            <com.barryzhang.tcontributionsview.TContributionsView
                android:id="@+id/cv_signin"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:layout_marginTop="2dp"
                app:contributions_color_0="@color/nostudy"
                app:contributions_color_1="@color/color_skyblue"
                app:contributions_color_2="@color/color_skyblue"
                app:contributions_color_3="@color/color_skyblue"
                app:contributions_color_4="@color/color_skyblue"
                app:contributions_item_height="12dp"
                app:contributions_item_width="12dp"
                app:contributions_item_space="6dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:text="@string/setting"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:layout_marginStart="40dp"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginHorizontal="25dp"
            android:paddingHorizontal="5dp"
            android:paddingVertical="10dp"
            android:backgroundTint="@color/color_grey_light"
            android:background="@drawable/round_rectangle_shape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/darkmode"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <Switch
                android:layout_marginEnd="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="UseSwitchCompatOrMaterialXml" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:text="@string/development"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:layout_marginStart="40dp"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginHorizontal="25dp"
            android:paddingHorizontal="5dp"
            android:paddingVertical="10dp"
            android:backgroundTint="@color/color_grey_light"
            android:background="@drawable/round_rectangle_shape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/string_email"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:layout_marginStart="10dp"
                android:layout_gravity="center_vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <ImageView
                android:src="@drawable/pic_email"
                android:layout_marginEnd="10dp"
                android:layout_width="35dp"
                android:layout_height="35dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="25dp"
            android:paddingHorizontal="5dp"
            android:paddingVertical="10dp"
            android:backgroundTint="@color/color_grey_light"
            android:background="@drawable/round_rectangle_shape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/string_weibo"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:layout_marginStart="10dp"
                android:layout_gravity="center_vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <ImageView
                android:src="@drawable/pic_weibo"
                android:layout_marginEnd="10dp"
                android:layout_width="35dp"
                android:layout_height="35dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="25dp"
            android:paddingHorizontal="5dp"
            android:paddingVertical="10dp"
            android:backgroundTint="@color/color_grey_light"
            android:background="@drawable/round_rectangle_shape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/string_github"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:layout_marginStart="10dp"
                android:layout_gravity="center_vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <ImageView
                android:src="@drawable/pic_github"
                android:layout_marginEnd="10dp"
                android:layout_width="35dp"
                android:layout_height="35dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:text="@string/about"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:layout_marginStart="40dp"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginHorizontal="25dp"
            android:paddingHorizontal="5dp"
            android:paddingVertical="10dp"
            android:backgroundTint="@color/color_grey_light"
            android:background="@drawable/round_rectangle_shape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/version"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>