<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_marginHorizontal="25dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_pic"
            android:src="@drawable/pic"
            android:layout_width="70dp"
            android:layout_height="70dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginStart="20dp">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_nickname"
                    android:text="SongX_"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tv_usersign"
                    android:text="落日沉溺于橘色的海。"
                    android:textColor="@color/black_second"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"/>
            </LinearLayout>

            <Button
                android:id="@+id/btn_updateuser"
                android:text="@string/updateuser"
                android:textSize="13sp"
                android:background="@drawable/round_button"
                android:layout_gravity="center_vertical|right"
                android:layout_width="90dp"
                android:layout_height="35dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp">

        <LinearLayout
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="25dp"
            android:paddingHorizontal="15dp"
            android:paddingVertical="15dp"
            android:elevation="10dp"
            android:backgroundTint="@color/color_grey_light"
            android:background="@drawable/round_rectangle_shape"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:lineSpacingExtra="10sp"
                android:textStyle="bold"
                android:text="@string/daily_record"
                android:textColor="@color/color_skyblue"
                android:textSize="20sp" />

            <com.barryzhang.tcontributionsview.TContributionsView
                android:id="@+id/cv_signin"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:layout_marginTop="2dp"
                app:contributions_color_0="@color/nostudy"
                app:contributions_color_1="@color/color_skyblue"
                app:contributions_color_2="@color/color_skyblue"
                app:contributions_color_3="@color/color_skyblue"
                app:contributions_color_4="@color/color_skyblue"
                app:contributions_item_height="12dp"
                app:contributions_item_width="12dp"
                app:contributions_item_space="6dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>




    </LinearLayout>

</LinearLayout>