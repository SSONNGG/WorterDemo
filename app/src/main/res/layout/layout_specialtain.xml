<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <!--英文拼写-->
    <LinearLayout
        android:background="@drawable/round_rectangle_shape"
        android:backgroundTint="@color/content_green_light"
        android:layout_marginHorizontal="25dp"
        android:layout_marginVertical="10dp"
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        android:elevation="5dp"
        android:orientation="vertical"
        android:onClick="trainSpell">
        <ImageView
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/pic_spell"
            android:layout_width="60dp"
            android:layout_height="60dp"/>

        <TextView
            android:text="英文拼写"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/content_green_deep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="拼写常错单词"
            android:textSize="10sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/content_green_deep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <!--数字-->
    <LinearLayout
        android:background="@drawable/round_rectangle_shape"
        android:backgroundTint="@color/content_pink_light"
        android:layout_marginRight="25dp"
        android:layout_marginVertical="10dp"
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        android:elevation="5dp"
        android:orientation="vertical"
        android:onClick="trainNum">
        <ImageView
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/pic_num"
            android:layout_width="60dp"
            android:layout_height="60dp"/>

        <TextView
            android:text="数字"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="认识英文数字"
            android:textSize="10sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <!--日期-->
    <LinearLayout
        android:background="@drawable/round_rectangle_shape"
        android:backgroundTint="@color/content_orange_light"
        android:layout_marginRight="25dp"
        android:layout_marginVertical="10dp"
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        android:elevation="5dp"
        android:orientation="vertical"
        android:onClick="trainDate">
        <ImageView
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/pic_date"
            android:layout_width="60dp"
            android:layout_height="60dp"/>

        <TextView
            android:text="日期"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/content_brown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="记住特别的日子"
            android:textSize="10sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/content_brown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <!--自由-->
    <LinearLayout
        android:background="@drawable/round_rectangle_shape"
        android:backgroundTint="@color/content_purple_title"
        android:layout_marginRight="25dp"
        android:layout_marginVertical="10dp"
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        android:elevation="5dp"
        android:orientation="vertical"
        android:onClick="trainFreedom">
        <ImageView
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/pic_free"
            android:layout_width="60dp"
            android:layout_height="60dp"/>

        <TextView
            android:text="自由"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="练习自选内容"
            android:textSize="10sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>